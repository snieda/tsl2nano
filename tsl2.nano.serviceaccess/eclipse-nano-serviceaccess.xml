<?xml version="1.0" encoding="UTF-8"?>
<!-- the export is only executable if you use the workspace java runtime!!! -->
<project default="tsl2nano.eclipse.serviceaccess.export" name="eclipse.tsl2.nano.serviceaccess">
	<!-- if not set, the default dir is tsl2nano.architect -->
	<property name="tsl2nano.architect.home.dir" value="../tsl2nano.architect" />
	<property name="dest.tsl2.nano.serviceaccess.dir" value="${tsl2nano.architect.home.dir}/packages" />

	<!-- pde export - only running inside eclipse -->
	<target name="tsl2nano.eclipse.serviceaccess.export" if="eclipse.running" depends="check.eclipse.running">
		<ant antfile="../tsl2.nano.serviceaccess/build-fsconnector.xml" target="compile" inheritall="false"/>
		<delete dir="${tsl2nano.architect.home.dir}/packages" includes="**/de.tsl2.nano.serviceaccess*.jar" failonerror="false" />
		<pde.exportPlugins destination="${dest.tsl2.nano.serviceaccess.dir}" exportSource="true" exportType="directory" plugins="de.tsl2.nano.serviceaccess" useJARFormat="true" />
	</target>

	<!-- should be called after calling tsl2nano.eclipse.serviceaccess.export -->
	<target name="deploy.to.tsl2nano.architect">
		<copy todir="${tsl2nano.architect.home.dir}/packages/shared/lib" failonerror="false">
			<fileset dir="${dest.tsl2.nano.serviceaccess.dir}/plugins">
				<include name="de.tsl2.nano.serviceaccess*.jar" />
			</fileset>
		</copy>
	</target>

	<!-- call that from outside to copy the new version to your lib dir -->
	<!-- tsl2.nano.serviceaccess.deploy.path must be set -->
	<!-- should be called after calling tsl2nano.eclipse.serviceaccess.export -->
	<target name="deploy.tsl2.nano.serviceaccess" if="tsl2.nano.serviceaccess.deploy.path" depends="deploy.to.tsl2nano.architect">
		<!-- <delete dir="${tsl2.nano.serviceaccess.deploy.path}" includes="**/de.tsl2.nano.serviceaccess*.jar" failonerror="false" /> -->
		<copy todir="${tsl2.nano.serviceaccess.deploy.path}" failonerror="false">
			<fileset dir="${dest.tsl2.nano.serviceaccess.dir}/plugins">
				<include name="de.tsl2.nano.serviceaccess*.jar" />
			</fileset>
		</copy>
	</target>
	<target name="check.eclipse.running" unless="eclipse.running">
		<echo message="WARNING: not using eclipse workspace java runtime ==> target will not be started !!!" />
	</target>

	<!-- Only for Eclipse internal execution (same VM). Refreshes a Eclipse project (e.g. because some lib has
	     been copied there.
	     Parameter (Property):
	     "refresh.project.name" - REQUIRED - the base directory of the project to be refreshed. Use the "...prj.dir"
	                      properties defined in common.xml -->
	<target name="refresh.eclipse.project" if="eclipse.running" depends="check.eclipse.running">
		<fail unless="refresh.project.name" message="Missing arg 'prj_base_dir'" />
		<echo>Update deploy target project: ${prj_base_dir} !!!</echo>
		<eclipse.convertPath fileSystemPath="${refresh.project.name}" property="wrapperBasePath" />
		<eclipse.refreshLocal resource="${wrapperBasePath}" depth="infinite" />
	</target>

</project>
